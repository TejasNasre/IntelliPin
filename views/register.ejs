<% include ./partials/header.ejs %>
<div
  class="w-full h-screen bg-[url('https://i.pinimg.com/564x/dd/4a/66/dd4a66f10c138179f210314fe0f91cbb.jpg')] bg-no-repeat bg-cover flex items-center justify-center bg-center"
>
  <div
    class="w-72 bg-white px-8 py-10 rounded-[30px] flex-col items-center justify-center"
  >
    <h1
      class="text-2xl leading-none tracking-tighter text-center capitalize font-semibold text-zinc-800"
    >
      Create New Account
    </h1>
    <form action="/register" method="post">
      <input
        class="border-2 rounded-md block w-full my-[20px] px-3 py-2"
        type="text"
        name="username"
        placeholder="Username"
      />
      <input
        class="border-2 rounded-md block w-full my-[20px] px-3 py-2"
        type="text"
        name="fullname"
        placeholder="Full Name"
      />
      <input
        class="border-2 rounded-md block w-full my-[20px] px-3 py-2"
        type="email"
        name="email"
        placeholder="Email"
      />
      <input
        class="border-2 rounded-md block w-full my-[20px] px-3 py-2"
        type="number"
        name="contact"
        placeholder="Contact"
      />
      <input
        class="border-2 rounded-md block w-full my-[20px] px-3 py-2"
        type="password"
        name="password"
        placeholder="Password"
      />
      <input
        class="capitalize border-2 block w-full mt-2 px-3 py-2 bg-red-600 text-white rounded-full cursor-pointer hover:bg-red-700 transition-all"
        type="submit"
        value="Sign In"
      />
    </form>
    <a
      href="/"
      class="w-full mt-2 inline-block font-semibold text-zinc-500 text-center"
      >Already Have An Account ?</a
    >
  </div>
</div>
<% include ./partials/footer.ejs %>
