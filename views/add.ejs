<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
  <h1 class="text-xl text-center">Create A New Post</h1>
  <hr class="opacity-10 mt-3" />
  <form action="/createpost" method="post" enctype="multipart/form-data" class="flex flex-col justify-center items-center mt-10">
    <input
      class="block w-1/3 px-3 py-2"
      type="file"
      name="postimage"
      placeholder="Add New Post"
    />
    <input
      class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2  text-black"
      type="text"
      name="title"
      placeholder="Title"
    />
    <input
      class="block w-1/3 px-3 py-2 border-2 rounded-md mt-2  text-black"
      type="text"
      name="description"
      placeholder="description"
      />
    <input
      class="block w-1/3 px-3 py-2 rounded-md mt-2 bg-red-700"
      type="submit"
      value="Upload Post"
    />
  </form>
</div>
